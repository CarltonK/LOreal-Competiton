<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.eshop.lorealnaturale.DresserFind">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <customfonts.MyTextView
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="This feature challenges hairdressers to perfect their customer service so as to receive good ratings from their clients. It also guides clients to the best serving hairdressers"
        android:layout_height="wrap_content" />


</LinearLayout>
